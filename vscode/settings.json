{
  // editor settings
  "editor.fontFamily": "JetBrains Mono, Menlo",
  "editor.fontLigatures": false,
  "editor.fontSize": 12.5,
  "editor.fontVariations": false,
  "editor.fontWeight": "700",
  "editor.letterSpacing": 0.35,
  "editor.lineHeight": 1.45,
  "editor.mouseWheelScrollSensitivity": 0.5,
  "editor.formatOnSave": false,
  "editor.rulers": [
    120
  ],
  "editor.unicodeHighlight.allowedLocales": {
    "zh-hans": true,
    "zh-hant": true
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.inlineSuggest.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",
  "files.autoSave": "afterDelay",
  "window.autoDetectColorScheme": true,
  "workbench.preferredDarkColorTheme": "Tokyo Storm AltSynt",
  "workbench.preferredLightColorTheme": "Eva Light",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 16,
  "workbench.colorCustomizations": {
    "list.errorForeground": "#d72834",
    "list.warningForeground": "#fa9b2f",
    "gitDecoration.modifiedResourceForeground": "#386fd6",
    "gitDecoration.untrackedResourceForeground": "#c26c6c",
    "gitDecoration.deletedResourceForeground": "#a19e9e",
    "statusBar.background": "#8aa9f9",
    "statusBar.noFolderBackground": "#8aa9f9",
    "statusBar.debuggingBackground": "#8aa9f9",
    "statusBar.foreground": "#434C5E",
    "statusBar.debuggingForeground": "#434C5E"
  },
  "workbench.tree.renderIndentGuides": "always",
  "workbench.list.mouseWheelScrollSensitivity": 0.5,
  "workbench.list.fastScrollSensitivity": 5,
  "todohighlight.isEnable": true,
  "tabnine.experimentalAutoImports": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    //auto indent
    "editor.formatOnType": true
  },
  // -----------------eslint settings-----------------
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown"
  ],
  "postfix.languages": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  // format settings
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[css]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // ------------------------vim settings-----------------------
  // vim air-line style
  "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": [
    "#8aa9f9",
    "#434C5E"
  ],
  "vim.statusBarColors.insert": "#cae796",
  "vim.statusBarColors.visual": "#ba9bf8",
  "vim.statusBarColors.visualline": "#ba9bf8",
  "vim.statusBarColors.visualblock": "#A3BE8C",
  "vim.statusBarColors.replace": "#ee7d82",
  "vim.statusBarColors.commandlineinprogress": "#f6c982",
  "vim.statusBarColors.searchinprogressmode": "#ee7d82",
  "vim.statusBarColors.easymotionmode": "#ee7d82",
  "vim.statusBarColors.easymotioninputmode": "#ee7d82",
  "vim.statusBarColors.surroundinputmode": "#ee7d82",
  // vim basic settings
  "vim.leader": "<Space>",
  "vim.useCtrlKeys": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.smartcase": true,
  "vim.showcmd": true,
  "vim.showmodename": true,
  "vim.searchHighlightColor": "#fbea72",
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 800,
  "vim.highlightedyank.color": "#f6c982",
  // 自带插件设置
  "vim.easymotion": true,
  "vim.sneak": false,
  "vim.useSystemClipboard": true,
  "vim.replaceWithRegister": true,
  "vim.leap.enable": true,
  "vim.leap.bidirectionalSearch": true,
  "vim.leap.marker.backgroundColors": [
    "#388096",
    "#99ccff"
  ],
  "vim.leap.marker.charColor": "#ffffff",
  "vim.leap.showMarkerPosition": "target",
  // 自动切换输入法
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
  "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/local/bin/im-select",
  "vim.autoSwitchInputMethod.switchIMCmd": "/usr/local/bin/im-select {im}",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  // normal模式下非递归
  "vim.normalModeKeyBindingsNonRecursive": [
    //保持和D C命令行为一致
    {
      "before": [
        "Y"
      ],
      "after": [
        "y",
        "$"
      ]
    },
    // 命令模式下回车直接换行
    {
      "before": [
        "<CR>"
      ],
      "after": [
        "i",
        "<CR>",
        "<Esc>"
      ]
    },
    // 取消高亮
    {
      "before": [
        "<Esc>"
      ],
      "commands": [
        ":nohl"
      ]
    },
    // 窗口管理
    {
      "before": [
        "<leader>",
        "w",
        "s"
      ],
      "commands": [
        ":sp"
      ]
    },
    {
      "before": [
        "<leader>",
        "w",
        "v"
      ],
      "commands": [
        ":vsp"
      ]
    },
    // 快捷映射
    {
      "before": [
        "<leader>",
        "a"
      ],
      "after": [
        "A"
      ]
    },
    {
      "before": [
        "<leader>",
        ";"
      ],
      "after": [
        "A",
        ";",
        "<Esc>"
      ]
    },
    // 换行
    {
      "before": [
        "<leader>",
        "o"
      ],
      "after": [
        "o",
        "<Esc>"
      ]
    },
    {
      "before": [
        "<leader>",
        "O"
      ],
      "after": [
        "O",
        "<Esc>"
      ]
    },
    {
      "before": [
        "<Leader>",
        "u"
      ],
      "after": [
        "~"
      ]
    },
    // 将 u/U 和 VSCode 自身的撤销 恢复动作绑定
    {
      "before": [
        "u"
      ],
      "commands": [
        "undo"
      ]
    },
    {
      "before": [
        "U"
      ],
      "commands": [
        "redo"
      ]
    },
    // tab 使用快捷键来代替，alt+H/L
    // 行内移动
    {
      "before": [
        "H"
      ],
      "after": [
        "^"
      ]
    },
    {
      "before": [
        "L"
      ],
      "after": [
        "g",
        "_"
      ]
    },
    // 快速移动
    {
      "before": [
        "J"
      ],
      "after": [
        "5",
        "j"
      ]
    },
    {
      "before": [
        "K"
      ],
      "after": [
        "5",
        "k"
      ]
    },
    // 恢复J的功能
    {
      "before": [
        "<leader>",
        "j"
      ],
      "after": [
        "J"
      ]
    },
    // easyMotion
    // {
    //   "before": [
    //     "g",
    //     "j"
    //   ],
    //   "after": [
    //     "<leader>",
    //     "<leader>",
    //     "j"
    //   ]
    // },
    // {
    //   "before": [
    //     "g",
    //     "k"
    //   ],
    //   "after": [
    //     "<leader>",
    //     "<leader>",
    //     "k"
    //   ]
    // },
    // {
    //   "before": ["s"],
    //   "after": ["<leader>", "<leader>", "2", "s"]
    // },
    // 调试运行
    {
      "before": [
        "<leader>",
        "d",
        "r"
      ],
      "commands": [
        "workbench.action.debug.run"
      ]
    },
    {
      "before": [
        "<leader>",
        "d",
        "s"
      ],
      "commands": [
        "workbench.action.debug.start"
      ]
    },
    {
      "before": [
        "<leader>",
        "r",
        "c"
      ],
      "commands": [
        "workbench.action.tasks.runTask"
      ]
    },
    // g系列
    {
      "before": [
        "g",
        "l"
      ],
      "commands": [
        "revealInExplorer"
      ]
    },
    {
      "before": [
        "g",
        "w"
      ],
      "after": [
        "*"
      ]
    },
    {
      "before": [
        "g",
        "i"
      ],
      "commands": [
        "editor.action.goToImplementation"
      ]
    },
    {
      "before": [
        "g",
        "d"
      ],
      "commands": [
        "editor.action.goToDeclaration"
      ]
    },
    {
      "before": [
        "g",
        "a"
      ],
      "commands": [
        "gitlens.toggleFileBlame"
      ]
    },
    {
      "before": [
        "g",
        "u"
      ],
      "commands": [
        "editor.action.goToReferences"
      ]
    },
    {
      "before": [
        "g",
        "U"
      ],
      "commands": [
        "references-view.findReferences"
      ]
    },
    {
      "before": [
        "g",
        "s"
      ],
      "commands": [
        "java.action.navigateToSuperImplementation"
      ]
    },
    // leader f 系列
    {
      "before": [
        "<leader>",
        "f",
        "a"
      ],
      "commands": [
        "workbench.action.showCommands"
      ]
    },
    {
      "before": [
        "<leader>",
        "h"
      ],
      "commands": [
        "workbench.action.closePanel",
        "workbench.view.explorer",
        "workbench.action.focusActiveEditorGroup"
      ]
    },
    {
      "before": [
        "<leader>",
        "H"
      ],
      "commands": [
        "workbench.action.closePanel",
        "workbench.action.closeSidebar"
      ]
    },
    // leader v 系列
    {
      "before": [
        "<leader>",
        "v",
        "u"
      ],
      "commands": [
        "git.revertSelectedRanges"
      ]
    }
  ],
  // 插入模式下非递归
  "vim.insertModeKeyBindingsNonRecursive": [
    // 取消高亮
    {
      "before": [
        "<Esc>"
      ],
      "after": [
        "<Esc>"
      ],
      "commands": [
        {
          "command": ":noh"
        }
      ]
    }
  ],
  // visual模式下非递归
  "vim.visualModeKeyBindingsNonRecursive": [
    // 快捷映射
    {
      "before": [
        "J"
      ],
      "after": [
        "5",
        "j"
      ]
    },
    {
      "before": [
        "K"
      ],
      "after": [
        "5",
        "k"
      ]
    },
    // 行内移动
    {
      "before": [
        "H"
      ],
      "after": [
        "^"
      ]
    },
    {
      "before": [
        "L"
      ],
      "after": [
        "g",
        "_"
      ]
    }
    // todo 重构，提取函数变量
  ],
  // 等待命令补全模式
  "vim.operatorPendingModeKeyBindings": [
    {
      "before": [
        "H"
      ],
      "after": [
        "^"
      ]
    },
    {
      "before": [
        "L"
      ],
      "after": [
        "g",
        "_"
      ]
    }
  ],
  "workbench.colorTheme": "Eva Light",
}