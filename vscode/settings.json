{
  // editor settings
  "editor.fontFamily": "Consolas, Menlo",
  "editor.fontLigatures": false,
  "editor.fontSize": 12.8,
  "editor.fontVariations": false,
  "editor.fontWeight": "700",
  "editor.letterSpacing": 0.35,
  "editor.lineHeight": 1.45,
  "editor.mouseWheelScrollSensitivity": 0.5,
  "editor.formatOnSave": false,
  "editor.rulers": [120],
  "editor.unicodeHighlight.allowedLocales": {
    "zh-hans": true,
    "zh-hant": true
  },
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.inlineSuggest.enabled": true,
  "material-icon-theme.folders.theme": "classic",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontWeight": "700",
  "security.workspace.trust.untrustedFiles": "open",
  "files.autoSave": "afterDelay",
  // "window.titleBarStyle": "native",
  "workbench.preferredDarkColorTheme": "Catppuccin Latte",
  "workbench.tree.indent": 16,
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#fa9b2f",
    "list.errorForeground": "#d72834",
    "list.warningForeground": "#fa9b2f",
    "gitDecoration.modifiedResourceForeground": "#386fd6",
    "gitDecoration.untrackedResourceForeground": "#c26c6c",
    "gitDecoration.deletedResourceForeground": "#a19e9e",
    // "statusBar.background": "#8aa9f9",
    // "statusBar.noFolderBackground": "#8aa9f9",
    // "statusBar.debuggingBackground": "#8aa9f9",
    // "statusBar.foreground": "#434C5E",
    // "statusBar.debuggingForeground": "#434C5E",
    "editor.selectionBackground": "#f2ad5e",
    "editor.lineHighlightBackground": "#e9dbc8"
  },
  "workbench.tree.renderIndentGuides": "always",
  "workbench.list.mouseWheelScrollSensitivity": 0.5,
  "workbench.list.fastScrollSensitivity": 5,
  "window.openFoldersInNewWindow": "on",
  "gitlens.heatmap.fadeLines": false,
  "gitlens.heatmap.hotColor": "#e3f7db",
  "gitlens.heatmap.coldColor": "#f9bbbf",
  "gitlens.blame.heatmap.location": "left",
  "diffEditor.ignoreTrimWhitespace": false,
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true
  },
  "pylint.args": ["--errors-only"],
  "pylint.path": ["conda", "run", "-n", "lint_env", "python", "-m", "pylint"],
  // -----------------eslint settings-----------------
  "eslint.probe": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "html",
    "vue",
    "markdown"
  ],
  "postfix.languages": [
    "javascript",
    "typescript",
    "javascriptreact",
    "typescriptreact"
  ],
  // format settings
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[css]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  //--------------------------------------------------------------------------
  //                           vim settings start
  // -------------------------------------------------------------------------
  // vim air-line style
  // "vim.statusBarColorControl": true,
  "vim.statusBarColors.normal": ["#8aa9f9", "#434C5E"],
  "vim.statusBarColors.insert": "#cae796",
  "vim.statusBarColors.visual": "#ba9bf8",
  "vim.statusBarColors.visualline": "#ba9bf8",
  "vim.statusBarColors.visualblock": "#A3BE8C",
  "vim.statusBarColors.replace": "#ee7d82",
  "vim.statusBarColors.commandlineinprogress": "#f6c982",
  "vim.statusBarColors.searchinprogressmode": "#ee7d82",
  "vim.statusBarColors.easymotionmode": "#ee7d82",
  "vim.statusBarColors.easymotioninputmode": "#ee7d82",
  "vim.statusBarColors.surroundinputmode": "#ee7d82",
  // vim basic settings
  "vim.leader": "<Space>",
  "vim.useCtrlKeys": true,
  "vim.incsearch": true,
  "vim.hlsearch": true,
  "vim.smartcase": true,
  "vim.showcmd": true,
  "vim.showmodename": true,
  "vim.searchHighlightColor": "#fbea72",
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 800,
  "vim.highlightedyank.color": "#f6c982",
  // 自带插件设置
  "vim.easymotion": false,
  "vim.sneak": false,
  "vim.flash.enable": true,
  "vim.useSystemClipboard": true,
  "vim.replaceWithRegister": true,
  // 自动切换输入法
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
  "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/local/bin/im-select",
  "vim.autoSwitchInputMethod.switchIMCmd": "/usr/local/bin/im-select {im}",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  // prettier-ignore
  "vim.normalModeKeyBindingsNonRecursive": [
      //保持和D C命令行为一致
      { "before": ["Y"], "after": ["y", "$"] },
      // 命令模式下回车直接换行
      { "before": ["<CR>"], "after": ["i", "<CR>", "<Esc>"] },
      { "before": ["<Esc>"], "commands": [":nohl"] },
      // 窗口管理
      { "before": ["<leader>", "w", "s"], "commands": [":sp"] },
      { "before": ["<leader>", "w", "v"], "commands": [":vsp"] },
      { "before": ["H"], "commands": ["workbench.action.previousEditor"] },
      { "before": ["L"], "commands": ["workbench.action.nextEditor"] },
      { "before": ["<leader>", ";"], "after": ["A", ";", "<Esc>"] },
      { "before": ["<leader>", "o"], "after": ["o", "<Esc>"] },
      { "before": ["<leader>", "O"], "after": ["O", "<Esc>"] },
      { "before": ["<Leader>", "u"], "after": ["~"] },
      { "before": ["u"], "commands": ["undo"] },
      { "before": ["U"], "commands": ["redo"] },
      // 行内移动
      { "before": ["HOME"], "after": ["^"] },
      { "before": ["END"], "after": ["g", "_"] },
      // 快速移动
      { "before": ["s"], "after": ["f"] },
      { "before": ["J"], "after": ["5", "j"] },
      { "before": ["K"], "after": ["5", "k"] },
      { "before": ["<leader>", "j"], "after": ["J"] },
      // easyMotion
      // { "before": [ "g", "j" ], "after": [ "<leader>", "<leader>", "j" ] },
      // { "before": [ "g", "k" ], "after": [ "<leader>", "<leader>", "k" ] },
      // { "before": ["s"], "after": ["<leader>", "<leader>", "2", "s"] },
      // 调试运行
      { "before": ["<leader>", "d", "r"], "commands": ["workbench.action.debug.run"] },
      { "before": ["<leader>", "d", "s"], "commands": ["workbench.action.debug.start"] },
      { "before": ["<leader>", "r", "c"], "commands": ["workbench.action.tasks.runTask"] },
      // g系列
      { "before": ["g", "l"], "commands": ["revealInExplorer"] },
      { "before": ["g", "w"], "after": ["*"] },
      { "before": ["g", "i"], "commands": ["editor.action.goToImplementation"] },
      { "before": ["g", "d"], "commands": ["editor.action.goToDeclaration"] },
      { "before": ["g", "a"], "commands": ["gitlens.toggleFileBlame"] },
      { "before": ["g", "u"], "commands": ["editor.action.goToReferences"] },
      { "before": ["g", "U"], "commands": ["references-view.findReferences"] },
      { "before": ["g", "s"], "commands": ["java.action.navigateToSuperImplementation"] },
      // leader f 系列
      { "before": ["<leader>", "f", "a"], "commands": ["workbench.action.showCommands"] },
      { "before": ["<leader>", "h"], 
        "commands": [
          "workbench.action.closePanel",
          "workbench.view.explorer",
          "workbench.action.focusActiveEditorGroup"
        ]
      },
      {
        "before": ["<leader>", "H"],
        "commands": [
          "workbench.action.closePanel",
          "workbench.action.closeSidebar"
        ]
      },
      // leader v 系列
      { "before": ["<leader>", "v", "u"], "commands": ["git.revertSelectedRanges"] },
      // 重构
      { "before": ["<leader>", "R"], "commands": ["abracadabra.renameSymbol"] },
    ],
  // prettier-ignore
  "vim.insertModeKeyBindingsNonRecursive": [
      // 取消高亮
      { "before": ["<Esc>"], "after": ["<Esc>"], "commands": [ { "command": ":noh" } ] }
    ],
  // prettier-ignore
  "vim.visualModeKeyBindingsNonRecursive": [
      { "before": ["s"], "after": ["f"] },
      { "before": ["J"], "after": ["5", "j"] },
      { "before": ["K"], "after": ["5", "k"] },
      { "before": ["HOME"], "after": ["^"] },
      { "before": ["END"], "after": ["g", "_"] },
      { "before": ["<leader>", "c", "e"], "commands": ["github.copilot.interactiveEditor.explain"] },
      { "before": ["<leader>", "c", "g"], "commands": ["github.copilot.interactiveEditor.generate"] },
      { "before": ["<leader>", "c", "t"], "commands": ["github.copilot.interactiveEditor.generateTests"] },
      { "before": ["<leader>", "c", "f"], "commands": ["github.copilot.interactiveEditor.fix"] },
    ],
  // prettier-ignore
  "vim.operatorPendingModeKeyBindings": [
      { "before": ["J"], "after": ["5", "j"] },
      { "before": ["K"], "after": ["5", "k"] },
      { "before": ["HOME"], "after": ["^"] },
      { "before": ["END"], "after": ["g", "_"] },
    ],
  //--------------------------------------------------------------------------
  //                           vim settings end
  // -------------------------------------------------------------------------
  // -----------------rust-----------------
  "rust-analyzer.completion.snippets": {
    "print": {
      "postfix": "println",
      "body": ["println!(\"{}\", ${receiver})"],
      "scope": "expr"
    },
    "Arc::new": {
      "postfix": "arc",
      "body": "Arc::new(${receiver})",
      "requires": "std::sync::Arc",
      "description": "Put the expression into an `Arc`",
      "scope": "expr"
    },
    "Rc::new": {
      "postfix": "rc",
      "body": "Rc::new(${receiver})",
      "requires": "std::rc::Rc",
      "description": "Put the expression into an `Rc`",
      "scope": "expr"
    },
    "Box::pin": {
      "postfix": "pinbox",
      "body": "Box::pin(${receiver})",
      "requires": "std::boxed::Box",
      "description": "Put the expression into a pinned `Box`",
      "scope": "expr"
    },
    "Ok": {
      "postfix": "ok",
      "body": "Ok(${receiver})",
      "description": "Wrap the expression in a `Result::Ok`",
      "scope": "expr"
    },
    "Err": {
      "postfix": "err",
      "body": "Err(${receiver})",
      "description": "Wrap the expression in a `Result::Err`",
      "scope": "expr"
    },
    "Some": {
      "postfix": "some",
      "body": "Some(${receiver})",
      "description": "Wrap the expression in an `Option::Some`",
      "scope": "expr"
    }
  },
  // "vscode_custom_css.imports": ["file:///Users/chason/.config/vscode/index.js"],
  "rust-analyzer.cargo.autoreload": true,
  "rust-analyzer.procMacro.enable": true,
  "multiCommand.commands": [
    {
      "command": "multiCommand.editor.action.commentLine",
      "sequence": ["editor.action.commentLine", "cursorDown"]
