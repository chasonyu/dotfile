"" Source your .vimrc
"source ~/.vimrc

let mapleader=" "

" ----------------------映射-----------------------
" 保持和D C命令行为一致
map Y y$
" 命令模式下按回车直接换行
nmap <CR> i<CR><Esc>
" 垂直分屏
nmap <Leader>sv :vsp<CR>
" 水平分屏
nmap <Leader>sg :sp<CR>
" 退出所有的缓冲区
nmap <Leader>sQ :qa<CR>
" 退出
nmap <Leader>sq :q<CR>
" 取消高亮
nmap <Leader><Space> :nohl<CR>

nmap <Leader>o o<Esc>
nmap <leader>O O<Esc>
" ctrl+hjkl切换分屏的窗口
nmap <BackSpace> <c-w>h
nmap <c-k> <c-w>k
nmap <c-j> <c-w>j
nmap <c-l> <c-w>l

" 基本配置"
set clipboard=unnamedplus,unnamed
"vim使用系统剪切板
set showmode
"窗口下面显示当前时哪个模式
set showcmd
"在下方显示你当前输入的命令，比如输入f来搜索，下面会显示出f
set scrolloff=1
"翻页的时候控制光标保持在第几行
set history=500
"记忆的历史命令数量

" 搜索
set lsearch "高亮搜索结果
set incsearch "实时增量显示搜索结果
set Leadersmartcase "这两个用来配合搜索的时候输入小写时搜索会忽视大小写，输入驼峰时会大小写敏感
set ignorecase

" 插件配置
set argtextobj "将参数扩展为一个文本对象"
set easymotion "easymotion
set sneak
set ideajoin

map <leader>f <Plug>(easymotion-s)
map <leader>e <Plug>(easymotion-f)
map <leader>E <Plug>(easymotion-F)
map <leader>j <Plug>(easymotion-j)
map <leader>k <Plug>(easymotion-k)


" Do incremental searching.


" Don't use Ex mode, use Q for formatting.
"""""""""""""""""""""""map"""""""""""""""""""""
map Q gq
