{
  "title": "yabai shortcuts",
  "rules": [
    {
      "description": "窗口切换option + 数字/n/p/tab",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "tab",
            "modifiers": {
                "mandatory": [
                  "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --focus recent"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "n",
            "modifiers": {
                "mandatory": [
                  "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --focus next || /opt/homebrew/bin/yabai -m space --focus first"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
                "mandatory": [
                  "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --focus prev || /opt/homebrew/bin/yabai -m space --focus last"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "1",
            "modifiers": {
                "mandatory": [
                  "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --focus 1"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "2",
            "modifiers": {
                "mandatory": [
                  "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --focus 2"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "3",
            "modifiers": {
                "mandatory": [
                  "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --focus 3"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "4",
            "modifiers": {
                "mandatory": [
                  "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --focus 4"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "5",
            "modifiers": {
                "mandatory": [
                  "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --focus 5"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "6",
            "modifiers": {
                "mandatory": [
                  "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --focus 6"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "7",
            "modifiers": {
                "mandatory": [
                  "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --focus 7"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "8",
            "modifiers": {
                "mandatory": [
