{
  "title": "yabai shortcuts",
  "rules": [
    {
      "description": "窗口切换option + 数字",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "1",
            "modifiers": {
                "mandatory": [
                  "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --focus 1"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "2",
            "modifiers": {
                "mandatory": [
                  "left_option"
              ]
            }
          },
          "to": [
            {
              "shell_command": "/opt/homebrew/bin/yabai -m space --focus 2"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
                "mandatory": [
                  "right_control",
                  "left_command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Google Chrome.app'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
                "mandatory": [
                  "right_control",
                  "left_command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/iTerm.app'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
                "mandatory": [
                  "right_control",
                  "left_command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Parallels Desktop.app'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
                "mandatory": [
                  "right_control",
                  "left_command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/QQ.app'"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
                "mandatory": [
                  "right_control",
                  "left_command"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open '/Applications/Safari.app'"
            }
          ]
        }
      ]
    }
  ]
}
